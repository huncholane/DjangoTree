{
  "name": "django-overview",
  "displayName": "django-overview",
  "description": "Shows the settings and models for the current django project",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "django-overview.openFile": {
          "title": "Open File"
        }
      }
    ],
    "configuration": {
      "title": "Django Overview",
      "properties": {
        "django-overview.projectDir": {
          "type": "string",
          "description": "The root path to a directory containing the manage.py file."
        },
        "django-overview.skipDirs": {
          "type": "array",
          "description": "Directories to skip when searching for settings and models",
          "default": [
            "**/node_modules/**",
            "**/__pycache__/**"
          ]
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "django-overview",
          "title": "Django Overview",
          "icon": "resources/django.svg"
        }
      ]
    },
    "views": {
      "django-overview": [
        {
          "id": "django-overview.get-started",
          "name": "Get Started",
          "when": "!django-overview.projectDir"
        },
        {
          "id": "django-overview.project",
          "name": "Project",
          "when": "django-overview.projectDir"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
